- content_for(:page_title) do 
  &= archives_title

#sectionPage
  %h2 #{h(@section.name.upcase)} Archives
  %br
  - if @months.empty?
    %p Once posts are added they will start to appear in this archive.
  - else   
    - @months.each do |month|
      %h3= format_month(month.date)
      %ul.archive-month
        - month.posts.each do |post| 
          %li
            = link_to(h(post.title), post_path(post))
            = unless post.tags.empty?
              %span.tags (#{linked_tag_list(post.tags)})

#arrows
  - if @previous
    .arrow#leftArrow= link_to (image_tag('arrow_left.jpg', :class => 'arrow'), section_path(@section, :page => @previous), :html => {:class => 'ico-prev'}) 
  - else
    &nbsp;
  - if @next
    .arrow#rightArrow= link_to (image_tag('arrow_right.jpg', :class => 'arrow'), section_path(@section, :page => @next), :html => {:class => 'ico-next'})
